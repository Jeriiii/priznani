{block head}
	<link rel='stylesheet' href="{$basePath}/css/slimbox/slimbox2.css" type="text/css">
{/block}
{block content}
{snippet imageAcceptance}
	<h2>Uživatelské obrázky</h2>
	{includeblock 'menu/acceptMenu.latte'}
	{foreach $images as $image}
		{if isset($lastImage) && $lastImage->galleryID != $image->galleryID}
			<hr>
		{/if}
		<ul class="inline">
				<li>
					<a href='{$image|getImgPath}' rel='lightbox' title="{$image->name}">
						<img class="accept" src='{$image|getImgPath}' alt="{$image->name}" height="250">
					</a>
				</li>
			<div class="clear"></div>
		</ul>
		<div class="clear"></div>
		<a n:href="acceptImage! imgId => $image->id, galleryId => $image->galleryID, userID => $image->gallery->userID" class="btn btn-success ajax">Potvrdit</a>
		<a n:href="acceptIntimImage! imgId => $image->id, galleryId => $image->galleryID, userID => $image->gallery->userID" class="btn btn-success ajax">Potvrdit - intimní</a>
		{*********** smazat příspěvek ***********}
		<button data-target="#modal{$iterator->getCounter()}" role="button" class="btn btn-danger" data-toggle="modal">smazat</button>
		<div class="modal hide fade in" id="modal{$iterator->getCounter()}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h5 id="myModalLabel">Smazat {$image->name}</h5>
			</div>
			<div class="modal-body">
				<p>Opravdu chcete smazat fotku {$image->name}?</p>
			</div>
			<div class="modal-footer">
				<a n:href="deleteImage! imgId => $image->id" class="btn btn-danger">
					Ano
				</a>
				<button class="btn" data-dismiss="modal" aria-hidden="true">Ne</button>
			</div>
		</div>
		<script type="text/javascript">$("#modal{$iterator->getCounter()}").modal({ show: false });</script>
		<br>
		{var $lastImage = $image}
	{/foreach}
{/snippet}
{/block}
{block foot}
	<script type="text/javascript" src="{$basePath}/js/slimbox2.js"></script>
{/block}