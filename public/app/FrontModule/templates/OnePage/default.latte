{block head}
    {control css 'onepage/default.less', 'stream/list.less', 'comments/comments.less', 'imgareaselect/default.less', 'imgareaselect/inWindow.less', 'photoRating/default.less', 'plugins/intro/introjs.min.css'}
{/block}

{block content}
<div id="activeBackgroundUploadPhoto" style="z-index:10000;position:fixed;top:0;left:0;background: rgba(20, 20, 20, 0.4);"></div>
<section id="entire-page">
	{includeblock 'navigation.latte'}
	<div id="best-match" data-step="1" data-intro="Poznávej nové uživatele v liště aktivních uživatelů.">
		{if $user->isLoggedIn()}
			{if $loggedUser->propertyID}
				{control bestMatchSearch 'listFew'}
			{else} {* vyzve uživatele k dokončení registrace *}
				Pokud se chcete seznámit, vyplňte o sobě <a n:href="DatingRegistration:" class="btn-main btn-small">další informace</a>.
			{/if}
		{/if}
	</div>
	<section class="content">
		<div id="stream"> 
			{include 'blocks/addUserInfo.latte'}
			{include 'blocks/addNewPost.latte'}
			{control userStream} 
		</div>
		<div class="clear"></div>
	</section>
	{includeblock 'rightBox.latte'}
</section>
{/block}

{block foot}
{control js}
{* je to zvlast schvalne, nejak si to nerozumi s tou minimalizaci*}
<script type="text/javascript" src="{$basePath}/js/imgareaselect/jquery.imgareaselect.min.js"></script>
<script type="text/javascript" src="{$basePath}/js/imgareaselect/inits/profilePhoto.js"></script>
{/block}


