
{block datingContent}
<div class="form-window">
	<h2 class="window-title">REGISTRACE</h2>
	<div class="window-content">
		{form firstRegForm}
			<ul class="error" n:if="$form->hasErrors()">
					<li n:foreach="$form->errors as $error">{$error}</li>
			</ul>
			<h2 id="form-logo">DATE<span>NODE</span></h2>
			<h3 id="form-logo-title">SOCIÁLNÍ SÍŤ PRO DOSPĚLÉ</h3>
			<table>
				<tr>
					<td>{label type /}	{input type}</td>
				</tr>

				<tr>
					<td>
						<label for="frm-firstRegForm" id="label-datebirth-first">DATUM NAROZENÍ</label>
						{input day class => date} {input month class => date} {input year class => date}
					</td>
				</tr>

				<tr id="second-birdhdate" {if empty($type) || $type == 1 || $type == 2 || $type == 6}style="display: none;"{/if}>
					<td>
						<label for="frm-firstRegForm" id="label-datebirth-second">DATUM NAROZENÍ - PARTNERA</label>
						{input daySecond class => date} {input monthSecond class => date} {input yearSecond class => date}
					</td>
				</tr>

				<tr>
					<td>
						{input send}

					<td>
				</tr>
			</table>
		{/form}
		{ifset $dontRenderUnderRegistration}
			{else}
			<div class="under-registration">
				<p class="title-sentence">"Bav se, chatuj, sdílej fotky<br /> a poznávej nové přátele"</p>
				<a class="scroll-to-btn" href="#second-slide" data-anchor="#second-slide" data-scroll-to="middle">
					Klikni a dozvíš se víc!
				</a>
			</div>
		{/ifset}
	</div>
</div>
{/block}

{block lastSlide}
<div class="second-registration-slide">
	<h2 class="slideTitle">ZKUSTE DATENODE JEŠTĚ DNES!</h2>
	<div id="last-slide" class="inner relative">
		{var $dontRenderUnderRegistration = TRUE;}
		{include #datingContent}
		<div class="clear"></div>
	</div>
	
</div>
{/}

{block datingFoot}
{control js 'registration/second-birthdate.js'}
{/}
