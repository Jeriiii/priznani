<a href="#popupDialog-{$id}" data-rel="popup" data-position-to="window" data-transition="pop"  title="{$tittle}" class="{$btnClass} ui-btn ui-corner-all ui-shadow ui-btn-inline">
	{if $btnSetText}
			{if $btnText == ""}{$tittle}{else}{$btnText}{/if}
		{/if}
</a>
<div data-role="popup" id="popupDialog-{$id}" data-dismissible="false" data-overlay-theme="a" data-theme="a">
	<div data-role="header">
		<h1>{$tittle} {$name}</h1>
	</div>
	<p>{$message}</p>
	<a href="{if $plink}{$presenter->link($link[0], $link[1])}{else}{$link}{/if}" id="confirmed-{$id}" class="{$confirmBtnClass}"></a>
	{* link musí odkazovat takto a skriptem se zařídí kliknutí na jiný link, aby nedocházelo ke konfliktu mezi nette.ajax a jQueryMobile *}
	<a href="#" data-confirm-href="#confirmed-{$id}" class="confirm-send-btn ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b" data-rel="back" data-transition="flow">Ano</a>
	<a href="#" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b confirm-close-btn" data-rel="back">Ne</a>
</div>