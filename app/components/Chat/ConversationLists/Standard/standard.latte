
<div id="conversations">
	<h5>Příchozí zprávy</h5>
<ul>
	{foreach $conversations as $conversation}
		{var $id = $userfinder->getCorrectCodedId($conversation->id_sender, $conversation->id_recipient)}
		{var $username = $userfinder->getCorrectUsername($conversation->id_sender, $conversation->id_recipient)}
		{var $unreaded = $conversation->readed == 0 && $userId != $conversation->id_sender}
		<li data-id="{$id}" data-title="{$username}" class="conversation-link {if $unreaded}unreaded{/if}">
		<strong>{$username}</strong>
		<p class="lastmessage">{$conversation->text}</p>
		</li>
	{/foreach}
</ul>

</div>
