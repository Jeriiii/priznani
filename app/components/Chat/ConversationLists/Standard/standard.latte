
{if $logged}
<div id="conversations">
<ul>
	{foreach $conversations as $conversation}
		{var $id = $coder->encodeData($conversation->id_sender)}
		{var $username = $conversation->id}{*verze bez query*}
		{var $unreaded = $conversation->readed == 0 && $userId != $conversation->id_sender}
		<li data-id="{$id}" data-title="{$username}" class="conversation-link">
		{if $unreaded}<strong>{/if}{$username}<br />
		"{$conversation->text}"
		{if $unreaded}</strong>{/if}
		</li>
	{/foreach}
</ul>

</div>
{/if}
