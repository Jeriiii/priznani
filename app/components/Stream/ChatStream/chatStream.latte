<section id="chat-messages">
	<div id="stream">
		<div class="loaderbar">
			<div class="stream-btn-next">
				<a id="next-data-item-btn" n:href="getMoreData!" class="ajax btn-main loadingbutton">zobrazit v√≠ce</a>
			</div>
			<div class="stream-message loading-message"></div>
			<div id="stream-loader"><img src="{$basePath}/img/ajax-loader.gif"></div>
		</div>
		<div n:snippet="stream-messages" data-ajax-append="true">
			{foreach $messages as $message}
				<div class="stream-message">
					<a n:href="Profil:Show: $message->id_sender">{$message->sender->user_name}</a>
					<p>{$message->text}</p>
				</div>
			{/foreach}
		</div>
		{include #addNewMessage}
	 </div>
	 <div class="clear"></div>
</section>