{*
 * @param Paginator $paginator
 * @param array     $steps
 *}

{if $paginator->pageCount > 1}
<div class="paginator">
	{if $paginator->isFirst()}
	<a href="#" class="paginator-left"></a>
	{else}
	<a class="paginator-left" href="{link this, 'page' => $paginator->page - 1}">
        </a>
	{/if}

	{foreach $steps as $step}
	{dump $step}
	{if $step == $paginator->page}
		<div><span class="current">{$step}</span></div>
	{else}
		<div><a href="{link this, 'page' => $step}">{$step}</a></div>
	{/if}
	{if $iterator->nextValue > $step + 1}<div><span>â€¦</span></div>{/if}
	{/foreach}

	{if $paginator->isLast()}
	<div class="paginator-right"></div>
	{else}
	<a class="paginator-right" href="{link this, 'page' => $paginator->page + 1}">
        </a>
	{/if}
        <div class="clear"></div>
</div>
{/if}

