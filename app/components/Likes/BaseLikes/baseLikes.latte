{snippet}
	{* pokud je uživatel přihlášený, dovolíme mu lajkovat *}
	{if $user->isLoggedIn()}
		{* pokud už uživatel tento obrázek lajkl, ukážeme jen text s celkovým počtem lajků *}
		{if $liked}
			{* vypíše text podle toho, jestli se jedná o obrázek/status *}
			{if $label == "obrázku"}
				<strong>Je sexy ({$likes})</strong>
			{else}
				<strong>Líbí ({$likes})</strong>
			{/if}
		{else}
			<a class="ajax" n:href="Like! $user->id, $item->id">{$button} ({$likes})<a/>
		{/if}
	{else}
		k ohodnocení {$label} se musíte <a href="{plink :Sign:in}">přihlásit</a>
	{/if}
{/snippet}