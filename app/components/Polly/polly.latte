<div class="polls" id="polly-{$confession->id}">
	{if !empty($polls[$confession->id])}
		{if ($polls[$confession->id] == "real")}
			<a n:href="changePolly! id_confession => $confession->id, polly => real, change => real" class="polly" data-polly="real-real">
