							    {input sexyaktivity}
					    </div>
					    <div class="checkbox">
						    {label sexyhratky /}
							    {input sexyhratky}
					    </div>*}
					</div>	
						
					<div class="form-group">
						{label note /}
						<div>
							{input note class => "form-control"}
						</div>
					</div>
					{*<div id="gift">
