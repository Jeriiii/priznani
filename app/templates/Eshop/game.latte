				<div id="contact-info">
					<br />
					<img class="icon"  alt="email" src="{$basePath}/images/mailicon.png" />
					<a href="mailto:info@priznaniosexu.cz" title="Napsat email" class="mail link">info@priznaniosexu.cz</a>
					<br /><br />
					<img class="icon"  alt="email" src="{$basePath}/images/phoneicon.png" />
					<span class="phone">  774 181 584</span><br />
					<div class="clear"></div>
				</div>
			</div>
			<div>
				{form eshopGamesOrdersForm role => "form", class => "form-games"}
					{if $form->hasErrors()}
					<ul id="formError">
						{foreach $form->errors as $error}
							<li class="alert alert-danger">{$error}</li>
						{/foreach}
					</ul>
					{/if}
					<div class="form-group">
						{label name /}
						<div>
							{input name class => "form-control input-sm"}
						</div>
					</div>
					<div class="form-group">
					    {label surname /}
					    <div>
						    {input surname class => "form-control"}
					    </div>
					</div>
					<div class="form-group">
					    {label email /}
					    <div>
						    {input email class => "form-control"}
					    </div>
					</div>
					<div class="form-group">
						{label phone /}
						<div class="input-group">
							<span class="input-group-addon">+ 420</span>
							{input phone class => "form-control"}
						</div>
					</div>
					<div class="checkbox">
						{label print /}
							{input print}
					</div>
					<div class="form-group">
						{label address /}
							{input address class => "form-control"}
					</div>
					<div class="checkgroup">
					    <div class="checkbox">
						    {label vasnivefantazie /}
							    {input vasnivefantazie}

					    </div>
					    <div class="checkbox">
						    {label nespoutanevzruseni /}
							    {input nespoutanevzruseni}
					    </div>
					    <div class="checkbox">
						    {label zhaveukolypropary /}
							    {input zhaveukolypropary}
					    </div>
					    {*<div class="checkbox">
