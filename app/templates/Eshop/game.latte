{block head}
	{control css 'bootstrap/forms-full.less', 'eshop/game.less'}
	{*control css 'eshop/game.less'*}
{/}
{block content}
	{*<nav>
		<ul id="top_menu">
			{foreach $games as $game}
				<li>
					<a class="scroll-to-game{$game->id}">
						{$game->name}
